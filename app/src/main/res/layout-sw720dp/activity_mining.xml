<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <include
        layout="@layout/app_bar_mining"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:background="@color/colorPrimary"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:elevation="8dp"
                android:layout_width="match_parent"
                android:layout_height="180dp">

                <ImageView
                    android:scaleType="centerCrop"
                    android:src="@drawable/blurredbitcoins"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/wallet"
                        android:layout_width="70dp"
                        android:layout_height="70dp" />

                    <TextView
                        android:singleLine="true"
                        android:paddingStart="8dp"
                        android:paddingLeft="8dp"
                        android:paddingEnd="8dp"
                        android:paddingRight="8dp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:id="@+id/emailTextMain"
                        android:text="Username"
                        android:textColor="@color/colorBackground"
                        android:layout_marginTop="12dp"
                        android:textSize="20sp"
                        fontPath="fonts/Roboto-Bold.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </FrameLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/redeem"
                        android:background="?attr/selectableItemBackground"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:alpha="0.5"
                            android:layout_marginLeft="16dp"
                            android:layout_marginStart="16dp"
                            android:padding="4dp"
                            android:src="@drawable/ic_redeem_black_48dp"
                            android:layout_gravity="center_vertical"
                            android:layout_width="36dp"
                            android:layout_height="36dp" />

                        <TextView
                            android:textColor="@android:color/white"
                            android:text="Redeem"
                            android:textSize="16sp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginStart="16dp"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/speedup"
                        android:background="?attr/selectableItemBackground"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:alpha="0.5"
                            android:layout_marginLeft="16dp"
                            android:layout_marginStart="16dp"
                            android:padding="4dp"
                            android:src="@drawable/ic_fast_forward_black_48dp"
                            android:layout_gravity="center_vertical"
                            android:layout_width="36dp"
                            android:layout_height="36dp" />

                        <TextView
                            android:text="Speed Up"
                            android:textSize="16sp"
                            android:textColor="@android:color/white"
                            android:layout_marginLeft="16dp"
                            android:layout_marginStart="16dp"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/claiming"
                        android:background="?attr/selectableItemBackground"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:alpha="0.5"
                            android:layout_marginLeft="16dp"
                            android:layout_marginStart="16dp"
                            android:padding="4dp"
                            android:src="@drawable/ic_timer_black_48dp"
                            android:layout_gravity="center_vertical"
                            android:layout_width="36dp"
                            android:layout_height="36dp" />

                        <TextView
                            android:textColor="@android:color/white"
                            android:text="Satoshi Claiming"
                            android:textSize="16sp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginStart="16dp"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/free"
                        android:background="?attr/selectableItemBackground"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:alpha="0.5"
                            android:layout_marginLeft="16dp"
                            android:layout_marginStart="16dp"
                            android:padding="4dp"
                            android:src="@drawable/ic_attach_money_black_48dp"
                            android:layout_gravity="center_vertical"
                            android:layout_width="36dp"
                            android:layout_height="36dp" />

                        <TextView
                            android:textColor="@android:color/white"
                            android:text="Free Satoshi"
                            android:textSize="16sp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginStart="16dp"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tickets"
                        android:background="?attr/selectableItemBackground"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:alpha="0.5"
                            android:layout_marginLeft="16dp"
                            android:layout_marginStart="16dp"
                            android:padding="4dp"
                            android:src="@drawable/ticket_icon"
                            android:layout_gravity="center_vertical"
                            android:layout_width="36dp"
                            android:layout_height="36dp" />

                        <TextView
                            android:text="Tickets game"
                            android:textSize="16sp"
                            android:textColor="@android:color/white"
                            android:layout_marginLeft="16dp"
                            android:layout_marginStart="16dp"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#c5c5c5"></LinearLayout>

                    <LinearLayout
                        android:id="@+id/rateus"
                        android:background="?attr/selectableItemBackground"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:alpha="0.5"
                            android:layout_marginLeft="16dp"
                            android:layout_marginStart="16dp"
                            android:padding="4dp"
                            android:src="@drawable/ic_star_border_black_48dp"
                            android:layout_gravity="center_vertical"
                            android:layout_width="36dp"
                            android:layout_height="36dp" />

                        <TextView
                            android:text="Rate Us"
                            android:textSize="16sp"
                            android:textColor="@android:color/white"
                            android:layout_marginLeft="16dp"
                            android:layout_marginStart="16dp"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/share"
                        android:background="?attr/selectableItemBackground"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:alpha="0.5"
                            android:layout_marginLeft="16dp"
                            android:layout_marginStart="16dp"
                            android:padding="4dp"
                            android:src="@drawable/ic_share_black_48dp"
                            android:layout_gravity="center_vertical"
                            android:layout_width="36dp"
                            android:layout_height="36dp" />

                        <TextView
                            android:text="Share"
                            android:textSize="16sp"
                            android:textColor="@android:color/white"
                            android:layout_marginLeft="16dp"
                            android:layout_marginStart="16dp"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/logout"
                        android:background="?attr/selectableItemBackground"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:alpha="0.5"
                            android:layout_marginLeft="16dp"
                            android:layout_marginStart="16dp"
                            android:padding="4dp"
                            android:src="@drawable/ic_exit_to_app_black_48dp"
                            android:layout_gravity="center_vertical"
                            android:layout_width="36dp"
                            android:layout_height="36dp" />

                        <TextView
                            android:text="Log Out"
                            android:textSize="16sp"
                            android:textColor="@android:color/white"
                            android:layout_marginLeft="16dp"
                            android:layout_marginStart="16dp"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
